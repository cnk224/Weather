<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #8EA2C6;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.WeatherViewController">
   <children>
      <Label fx:id="ville" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" text="--" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label fx:id="time" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" text="--" textFill="#ffffff80">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="temperature" alignment="TOP_CENTER" contentDisplay="TOP" maxWidth="1.7976931348623157E308" text="--" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="99.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="HUMIDITE" textFill="#ffffff80">
                     <padding>
                        <Insets bottom="30.0" />
                     </padding>
                  </Label>
                  <Label fx:id="humidity" text="--" textFill="WHITE">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="RISQUE DE PLUIE" textFill="#ffffff80">
                     <padding>
                        <Insets bottom="30.0" />
                     </padding>
                  </Label>
                  <Label fx:id="precip" text="--" textFill="WHITE">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
      <Label fx:id="weather_descriptions" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" text="Récupération de la température actuelle" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</VBox>
